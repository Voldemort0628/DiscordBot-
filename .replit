modules = ["python-3.11", "python3", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Continuous Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Bot"

[[workflows.workflow]]
name = "Monitor"
author = 9248373

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_monitor.py 10"

[[workflows.workflow]]
name = "Test Discord"
author = 9248373

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_webhook_test.py your-discord-webhook-url"

[[workflows.workflow]]
name = "Test Monitor"
author = 9248373

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_monitor.py"

[[workflows.workflow]]
name = "Continuous Monitor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Discord Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python discord_bot/bot.py"

[deployment]
run = ["sh", "-c", "gunicorn --workers 3 --worker-class gthread --threads 3 --timeout 120 --preload --max-requests 1000 --max-requests-jitter 50 --bind 0.0.0.0:5000 wsgi:app"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 8080
externalPort = 8080
